<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unnamedsoftware.russesamfunnet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Global"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Russesamfunnet"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Feed"
            android:label="@string/app_name" />

        <activity
            android:name=".Register"
            android:label="@string/app_name" />
        <activity
            android:name=".Scoreboard"
            android:label="@string/app_name"
            android:parentActivityName=".Feed">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Feed" />
        </activity>
        <activity
            android:name=".UserProfile"
            android:label="@string/app_name"
            android:parentActivityName=".Feed">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Feed" />
        </activity>
        <activity
            android:name=".KnotList"
            android:label="@string/app_name"
            android:parentActivityName=".Feed">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Feed" />
        </activity>
        <activity
            android:name=".Knot"
            android:label="@string/app_name"
            android:parentActivityName=".KnotList">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".KnotList" />
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/app_name"
            android:parentActivityName=".Feed">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Feed" />
        </activity>

        <activity
            android:name=".Events"
            android:label="@string/app_name"
            android:parentActivityName=".Feed">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Feed" />
        </activity>

        <activity
            android:name=".GroupList"
            android:label="@string/app_name"
            android:parentActivityName=".Feed">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Feed" />
        </activity>
        <activity
            android:name=".GroupHub"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:parentActivityName=".GroupList">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GroupList" />
        </activity>
        <activity
            android:name=".GroupScoreboardMembersList"
            android:label="@string/app_name"
            android:parentActivityName=".GroupHub">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".GroupHub" />
        </activity>

        <activity android:name=".SchoolAndBirthdayRegisterActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/app_name"
            android:parentActivityName=".Login"/>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
    </application>

</manifest>